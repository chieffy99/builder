n range(len(y_points)-1)] \n        y_records.append({ \n            'X': x, 'Y Points': str(y_points), 'Y Dif': str(y_diffs), \n            'Y Count': len(y_points), 'Y Dif Count': len(set(y_diffs)), \n            'Y Dif Min': min(y_diffs) if y_diffs else 0, 'Y Dif Max': max(y_diffs) if y_diffs else 0 \n        }) \n    return pd.DataFrame(x_records), pd.DataFrame(y_records) \n \nfor fname in sorted(os.listdir(INPUT_DIR)): \n    if fname.lower().endswith(('.png', '.jpg', '.jpeg', '.bmp')): \n        img_path = os.path.join(INPUT_DIR, fname) \n        df_x, df_y = extract_transition_profile_XY(img_path) \n        base = os.path.splitext(fname)[0] \n        df_x.to_csv(os.path.join(PATTERN_DIR, f'{base}_X.csv'), index=False) \n        df_y.to_csv(os.path.join(PATTERN_DIR, f'{base}_Y.csv'), index=False) \n        print(f'‚úî ‡πÑ‡∏î‡πâ‡πÑ‡∏ü‡∏•‡πå‡∏ú‡∏•‡∏•‡∏±‡∏û‡∏ò‡πå: {base}_X.csv, {base}_Y.csv') \nprint('=== ‡πÄ‡∏™‡∏£‡πá‡∏à‡πÄ‡∏£‡∏µ‡∏¢‡∏ö‡∏£‡πâ‡∏≠‡∏¢ ===') "
