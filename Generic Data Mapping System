                            data: [32450, 13422.5],
                            backgroundColor: [
                                'rgba(86, 171, 47, 0.7)',
                                'rgba(253, 203, 110, 0.7)'
                            ],
                            borderWidth: 1
                        }]
                    }
                }
            ];
            
            // ========================
            // สร้างการ์ดใน Card List
            // ========================
            const cardList = document.getElementById('cardList');
            
            cardsData.forEach(card => {
                const miniCard = document.createElement('div');
                miniCard.className = `card mini-card ${card.category}`;
                miniCard.setAttribute('data-id', card.id);
                miniCard.setAttribute('data-type', card.type);
                miniCard.innerHTML = `
                    <div class="card-header">
                        <div class="card-title">${card.title}</div>
                    </div>
                `;
                cardList.appendChild(miniCard);
                
                // ทำให้การ์ดลากได้
                $(miniCard).draggable({
                    helper: 'clone',
                    opacity: 0.7,
                    zIndex: 100,
                    containment: 'document',
                    revert: 'invalid',
                    start: function(event, ui) {
                        $(ui.helper).addClass('dragging-card').css('width', $(this).width() + 'px');
                    }
                });
            });
            
            // ========================
            // ทำให้พื้นที่แดชบอร์ดรับการวางได้
            // ========================
            const dashboardArea = document.getElementById('dashboardArea');
            
            $(dashboardArea).droppable({
                accept: '.mini-card',
                drop: function(event, ui) {
                    createCardOnDashboard(
                        ui.draggable.attr('data-id'),
                        event.pageX - $(this).offset().left - 50,
                        event.pageY - $(this).offset().top - 20
                    );
                }
            });
            
            // ========================
            // ฟังก์ชันการทำงานหลัก
            // ========================
            
            // สร้างการ์ดบนแดชบอร์ด
            function createCardOnDashboard(cardId, posX, posY) {
                // ตรวจสอบว่ามีการ์ดนี้บนแดชบอร์ดอยู่แล้วหรือไม่
                if (document.querySelector(`.dashboard-card[data-id="${cardId}"]`)) {
                    alert('การ์ดนี้มีอยู่บนแดชบอร์ดแล้ว');
                    return;
                }
                
                // หาข้อมูลการ์ด
                const cardInfo = cardsData.find(card => card.id === cardId);
                if (!cardInfo) return;
                
                // สร้างการ์ดใหม่
                const card = document.createElement('div');
                card.className = `card dashboard-card ${cardInfo.category}`;
                card.setAttribute('data-id', cardInfo.id);
                card.setAttribute('data-type', cardInfo.type);
                card.style.left = `${posX}px`;
                card.style.top = `${posY}px`;
                
                // ถ้า posX หรือ posY ไม่ได้ระบุ (เช่น NaN) ให้วางตรงกลาง
                if (isNaN(posX) || isNaN(posY)) {
                    card.style.left = '50%';
                    card.style.top = '50%';
                    card.style.transform = 'translate(-50%, -50%)';
                }
                
                card.innerHTML = `
                    <div class
