  <!-- Chart.js CDN -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.3.0/dist/chart.umd.min.js"></script>
  <script>
    const ctx = document.getElementById('salesChart').getContext('2d');

    const data = {
      labels: ['จันทร์','อังคาร','พุธ','พฤหัส','ศุกร์','เสาร์','อาทิตย์','จันทร์'],
      datasets: [{
        label: 'ยอดขาย',
        data: [8000, 14500, 15000, 12000, 11300, 11800, 11950, 12050],
        borderColor: '#7289da',
        backgroundColor: 'rgba(114,137,218,0.2)',
        tension: 0.4,
        pointBackgroundColor: '#7289da',
        pointRadius: 4
      }]
    };

    const options = {
      plugins: {
        legend: {
          labels: { color: '#ffffff', boxWidth: 12 }
        }
      },
      scales: {
        x: {
          ticks: { color: '#cccccc' },
          grid: { color: 'rgba(255,255,255,0.1)' }
        },
        y: {
          ticks: {
            color: '#cccccc',
            callback: value => value + ' ฿'
          },
          grid: { color: 'rgba(255,255,255,0.1)' }
        }
      }
    };

    new Chart(ctx, {
      type: 'line',
      data,
      options
    });
  </script>

