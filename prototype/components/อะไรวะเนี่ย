  <script>
    // Orbit positioning
    const orbit = document.getElementById('orbit');
    const items = orbit.querySelectorAll('.orbit-item');
    const center = orbit.clientWidth/2;
    items.forEach((it,i) => {
      const angle = (Math.PI*2/ items.length)*i;
      const r = center - 40;
      it.style.left = (center + r*Math.cos(angle) - it.clientWidth/2) + 'px';
      it.style.top  = (center + r*Math.sin(angle) - it.clientHeight/2) + 'px';
    });
    document.getElementById('spin').addEventListener('click', () => {
      const deg = Math.floor(Math.random()*360) + 360;
      orbit.style.transform = `rotate(${deg}deg)`;
    });

    // Chart.js setups
    const lineCtx = document.getElementById('lineChart').getContext('2d');
    new Chart(lineCtx, {
      type: 'line',
      data: {
        labels: ['Jan','Feb','Mar','Apr','May','Jun','Jul'],
        datasets: [{
          label: 'ยอดขาย',
          data: [7000,15000,12000,13000,12500,14000,13500],
          borderColor: '#4fc3f7',
          tension: 0.4,
          fill: false
        }]
      },
      options: {
        responsive: true,
        plugins: { legend:{labels:{color:'#ddd'}} },
        scales:{
          x:{ ticks:{ color:'#bbb' }, grid:{ color:'#333' }},
          y:{ ticks:{ color:'#bbb' }, grid:{ color:'#333' }}
        }
      }
    });

    const barCtx = document.getElementById('barChart').getContext('2d');
    new Chart(barCtx, {
      type: 'bar',
      data: {
        labels: ['A','B','C','D','E'],
        datasets:[{
          label: 'ยอดขาย',
          data:[14000,12000,10000,6000,8000],
          backgroundColor:'#fbc02d'
        }]
      },
      options:{
        responsive:true,
        plugins:{ legend:{labels:{color:'#ddd'}} },
        scales:{
          x:{ ticks:{ color:'#bbb' }, grid:{ color:'#333' }},
          y:{ ticks:{ color:'#bbb' }, grid:{ color:'#333' }}
        }
      }
    });

    // Close buttons hide cards
    document.querySelectorAll('.module-card .close, .module-card-2 .close')
      .forEach(btn=> btn.addEventListener('click', e=>{
        e.target.closest('.module-card, .module-card-2').style.display='none';
      }));

    // Bottom action-button toggles floating bar
    const actBtn = document.getElementById('actBtn');
    const floatBar = document.getElementById('floatBar');
    actBtn.addEventListener('click', ()=> {
      floatBar.style.display = floatBar.style.display==='flex' ? 'none' : 'flex';
    });

    // Drag & Drop for socket card
    const card = document.getElementById('card');
    const socket = document.getElementById('socket');

    card.addEventListener('dragstart', e=> {
      e.dataTransfer.setData('text/plain','card');
    });
    socket.addEventListener('dragover', e=> {
      e.preventDefault();
      socket.style.borderColor = '#aaa';
    });
    socket.addEventListener('dragleave', e=> {
      socket.style.borderColor = '#666';
    });
    socket.addEventListener('drop', e=> {
      e.preventDefault();
      socket.style.borderColor = '#666';
      const dropped = document.getElementById('card');
      socket.textContent = '';
      socket.appendChild(dropped);
      dropped.style.position = 'static';
      dropped.style.margin = 'auto';
    });
  </script>
</body>
